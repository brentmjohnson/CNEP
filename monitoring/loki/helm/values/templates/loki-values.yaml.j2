loki:
  schemaConfig:
    configs:
      - from: 2023-02-15
        store: cassandra
        # object_store: cassandra
        object_store: s3
        schema: v11
        index:
          prefix: index_
          period: 24h
        chunks:
          prefix: chunk_
          period: 24h
  storageConfig:
    cassandra:
      addresses: scylla-client.scylla
      disable_initial_host_lookup: true
      replication_factor: 1
      consistency: LOCAL_ONE
      keyspace: loki
      auth: true
      username: {{ credentials.loki_scylla.username }}
      password: {{ credentials.loki_scylla.password }}
      # timeout: 60s
    aws:
      bucketnames: {{ loki_bucket.BUCKET_NAME }}
      endpoint: {{ loki_bucket.BUCKET_HOST }}.cluster.local:{{ loki_bucket.BUCKET_PORT }}
      access_key_id: {{ loki_bucket.AWS_ACCESS_KEY_ID }}
      secret_access_key: {{ loki_bucket.AWS_SECRET_ACCESS_KEY }}
      insecure: true
      s3forcepathstyle: true
