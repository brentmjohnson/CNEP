apiVersion: k8s.keycloak.org/v2alpha1
kind: Keycloak
metadata:
  name: keycloak
  namespace: keycloak
  labels:
    app: keycloak
spec:
  instances: 1
  additionalOptions:
    - name: db
      value: postgres
    - name: db-url-host
      value: postgres-cluster.postgres.svc.cluster.local
    # - name: db-schema
    #   value: public
    # - name: db-url-database
    #   value: keycloak
    - name: db-username
      value: {{ credentials.keycloak_postgres.username }}
    - name: db-password
      value: {{ credentials.keycloak_postgres.password }}
    - name: http-enabled
      value: 'true'
    - name: http-relative-path
      value: /keycloak
    - name: health-enabled
      value: 'true'
    - name: metrics-enabled
      value: 'true'
  hostname:
    strict: false
    strictBackchannel: false
    httpEnabled: true
  ingress:
    enabled: false
  tlsSecret: INSECURE-DISABLE
